@page
@model WebApp_Razor.Pages.Category_.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
           <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Category_/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Create new category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
   <tr>
       <th>
           Category Name
       </th>
       <th>
           Display Order
       </th>
       <th></th>
       <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder)) { 
                <tr>
                   <td>
                       @obj.Name
                   </td>
                   <td>
                       @obj.DisplayOrder
                   </td>
                   <td>
                       <div class="w-75 btn-group" role="group">
                           <a asp-page="/Category_/Edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>   Edit
                           </a>
                       
                                <a asp-page="/Category_/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash2-fill"></i>   Delete
                                </a>
                               @*  <form method="post" asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id">
                                   <input asp-for="@obj.Id" hidden />
                                    <button type="submit" class="btn btn-danger form-control">Delete Now</button>
                                </form>
                                *@
                                <form method="post" >
                                    <input asp-for="@obj.Id" hidden />
                                    <button type="submit" asp-page-handler="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 form-control">Delete Now</button>
                                </form>
                       </div>
                   </td>
               </tr>
            }
       </tbody>
   </tr>
</table>
</div>

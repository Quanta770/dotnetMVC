@page
@model WebApp_Razor.Pages.Category_.EditModel


<form method="post">
    <input asp-for="categoryfromDB.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="categoryfromDB.Name" class="p-0"></label>
            <input asp-for="categoryfromDB.Name" class="form-control" />
            <span asp-validation-for="categoryfromDB.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="categoryfromDB.DisplayOrder" class="p-0"></label>
            <input asp-for="categoryfromDB.DisplayOrder" class="form-control" />
            <span asp-validation-for="categoryfromDB.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Category_/Index" class="btn btn-outline-secondary form-control">Back</a>

            </div>
        </div>
    </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
           <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Add New Book
            </a>
        </div>
    </div>
<table id="tblData" class="table table-bordered table-striped text-light">
   <tr>
           <th>
               Title
           </th>
           <th>
               ISBN
           </th>
            <th>
                Description
            </th>
            <th>
                Author
            </th>
            <th>
                Category
            </th>
            <th>
                Publisher
            </th>
            <th>
                Price
            </th>
      
      
   </tr>
</table>
</div>

@section Scripts{
    <script src="~/js/Product.js"></script>
}